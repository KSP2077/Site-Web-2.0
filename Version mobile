    <!-- Boutons pour les images -->
    <div>
        <button class="button" onclick="changerImages()">Afficher / Changer les images</button>
        <button class="button" onclick="cacherImages()">Cacher les images</button>
    </div>

    <!-- Conteneur des images -->
    <div id="image-container" class="container"></div>

    <footer>
        ¬© 2025 - Version HTML du site-web 2.0
